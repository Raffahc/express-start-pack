{
    "compilerOptions": {
        "baseUrl": "./",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es6", "dom"],        
        "module": "commonjs",
        "moduleResolution": "node",        
        "noImplicitAny": true,
        "outDir": "dist",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "sourceMap": true,
        "target": "es5",
        "types": ["reflect-metadata"]        
    },
    "include": [
        "src/**/*"
    ]
}
